# ============================================
#  TEMA Cluster Node - Example Environment File
# ============================================
# Copy this file to ".env" and replace the values
# with your actual configuration settings.
# ============================================


# === General Paths ===
# Absolute path where VPN configurations and certificates will be stored.
VPN_DIR="/opt/tema/vpn"


# === Partner Names ===
# List of all potential partner identifiers in the TEMA network.
PARTNER_NAMES=("auth" "dlr" "eng" "atos" "use" "tsyl" "nd" "plus" "lc" "lat40" "ns" "fhhi" "unime" "kamk" "kaj" "kemea" "other")


# === VPN Configuration ===
# URLs and credentials required for VPN certificate generation and status checks.
VPN_STATUS_URL="http://example-vpn-server.com:8999/status"
VPN_GEN_CERT_URL="http://example-vpn-server.com:8999/gen-cert"
VPN_USER="your_vpn_username"
VPN_PASSWORD="your_vpn_password"


# === Kubernetes (K3s) Configuration ===
# Cluster API endpoint, authentication token, and desired K3s version.
K3S_URL="https://example-k3s-master:6443"
K3S_TOKEN="your_k3s_cluster_token_here"
INSTALL_K3S_VERSION="v1.30.6+k3s1"

# === Logging and Debugging (Optional) ===
# Enable or disable verbose output during setup or troubleshooting.
DEBUG_MODE="false"
